<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_dash"
    app:startDestination="@id/mainDashboard"> <fragment
    android:id="@+id/mainDashboard"
    android:name="com.example.fintelis.DashboardFragment"
    android:label="Dashboard"
    tools:layout="@layout/fragment_dashboard" >
    <action
        android:id="@+id/action_mainDashboard_to_customerListFragment"
        app:destination="@id/customerListFragment" />
</fragment>

    <fragment
        android:id="@+id/analysisFragment"
        android:name="com.example.fintelis.CreditResultFragment"
        android:label="Analysis"
        tools:layout="@layout/fragment_credit_result" />

    <fragment
        android:id="@+id/customerListFragment"
        android:name="com.example.fintelis.TransactionListFragment"
        android:label="Transaction History"
        tools:layout="@layout/fragment_transaction_list" >

        <action
            android:id="@+id/action_customerListFragment_to_customerDetailFragment"
            app:destination="@id/customerDetailFragment" />

        <action
            android:id="@+id/action_customerListFragment_to_addCustomerFragment"
            app:destination="@id/addCustomerFragment" />
    </fragment>

    <fragment
        android:id="@+id/addCustomerFragment"
        android:name="com.example.fintelis.AddTransactionFragment"
        android:label="Add Transaction"
        tools:layout="@layout/fragment_add_transaction" >

        <action
            android:id="@+id/action_addCustomerFragment_to_customerListFragment"
            app:destination="@id/customerListFragment"/>
    </fragment>

    <fragment
        android:id="@+id/customerDetailFragment"
        android:name="com.example.fintelis.TransactionDetailFragment"
        android:label="Transaction Detail"
        tools:layout="@layout/fragment_transaction_detail" >

        <argument
            android:name="transaction"
            app:argType="com.example.fintelis.data.Transaction" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.fintelis.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_editProfileFragment"
            app:destination="@+id/editProfileFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_changePasswordFragment"
            app:destination="@+id/changePasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_visualization"
        android:name="com.example.fintelis.VisualizationFragment"
        android:label="Visualization"
        tools:layout="@layout/fragment_visualization">

        <action
            android:id="@+id/action_visualization_to_detailCashflow"
            app:destination="@id/detailCashflowFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/detailCashflowFragment"
        android:name="com.example.fintelis.DetailCashflowFragment"
        android:label="Cashflow Detail"
        tools:layout="@layout/fragment_detail_cashflow">

        <argument
            android:name="isExpense"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.fintelis.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.fintelis.ChangePasswordFragment"
        android:label="Change Password"
        tools:layout="@layout/fragment_change_password" />
</navigation>