<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_dash"
    app:startDestination="@id/mainDashboard">

    <fragment
        android:id="@+id/mainDashboard"
        android:name="com.example.fintelis.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/customerListFragment"
        android:name="com.example.fintelis.CustomerListFragment"
        android:label="Customer Database"
        tools:layout="@layout/fragment_customer_list" >
        <action
            android:id="@+id/action_customerListFragment_to_customerDetailFragment"
            app:destination="@id/customerDetailFragment" />
        <action
            android:id="@+id/action_customerListFragment_to_addCustomerFragment"
            app:destination="@id/addCustomerFragment" />
    </fragment>

    <fragment
        android:id="@+id/addCustomerFragment"
        android:name="com.example.fintelis.AddCustomerFragment"
        android:label="Add Customer"
        tools:layout="@layout/fragment_add_customer" >
        <action
            android:id="@+id/action_addCustomerFragment_to_customerListFragment"
            app:destination="@id/customerListFragment"/>
    </fragment>

    <fragment
        android:id="@+id/customerDetailFragment"
        android:name="com.example.fintelis.CustomerDetailFragment"
        android:label="Customer Detail"
        tools:layout="@layout/fragment_customer_detail" >
        <argument
            android:name="customerData"
            app:argType="com.example.fintelis.data.Customer" />
        <action
            android:id="@+id/action_to_analysisResult"
            app:destination="@id/nav_analysisResult" />
    </fragment>

    <fragment
        android:id="@+id/nav_analysisResult"
        android:name="com.example.fintelis.AnalysisResultFragment"
        android:label="Analysis Result"
        tools:layout="@layout/fragment_analysis_result">
        <argument
            android:name="customerData"
            app:argType="com.example.fintelis.data.Customer" />
        <action
            android:id="@+id/action_analysisResultFragment_to_analysisFragment"
            app:destination="@id/analysisFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.fintelis.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_editProfileFragment"
            app:destination="@+id/editProfileFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_changePasswordFragment"
            app:destination="@+id/changePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_visualization"
        android:name="com.example.fintelis.VisualizationFragment"
        android:label="fragment_visualization"
        tools:layout="@layout/fragment_visualization" />
    <fragment
        android:id="@+id/analysisFragment"
        android:name="com.example.fintelis.AnalysisFragment"
        android:label="fragment_analysis"
        tools:layout="@layout/fragment_analysis" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.fintelis.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.fintelis.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
</navigation>