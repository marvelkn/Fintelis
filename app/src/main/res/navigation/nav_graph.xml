<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/customerListFragment">

    <fragment
        android:id="@+id/customerListFragment"
        android:name="com.example.fintelis.CustomerListFragment"
        android:label="Customer Database"
        tools:layout="@layout/fragment_customer_list" >
        <action
            android:id="@+id/action_customerListFragment_to_customerDetailFragment"
            app:destination="@id/customerDetailFragment" />
        <action
            android:id="@+id/action_customerListFragment_to_addCustomerFragment"
            app:destination="@id/addCustomerFragment" />
    </fragment>

    <fragment
        android:id="@+id/addCustomerFragment"
        android:name="com.example.fintelis.AddCustomerFragment"
        android:label="Add Customer"
        tools:layout="@layout/fragment_add_customer" />

    <fragment
        android:id="@+id/customerDetailFragment"
        android:name="com.example.fintelis.CustomerDetailFragment"
        android:label="Customer Detail"
        tools:layout="@layout/fragment_customer_detail" >
        <argument
            android:name="customerData"
            app:argType="com.example.fintelis.data.Customer" />
        <action
            android:id="@+id/action_to_analysisResult"
            app:destination="@id/analysisResultFragment" />
    </fragment>

    <fragment
        android:id="@+id/analysisResultFragment"
        android:name="com.example.fintelis.AnalysisResultFragment"
        android:label="Analysis Result"
        tools:layout="@layout/fragment_analysis_result">

        <argument
            android:name="customerData"
            app:argType="com.example.fintelis.data.Customer" />
    </fragment>
</navigation>