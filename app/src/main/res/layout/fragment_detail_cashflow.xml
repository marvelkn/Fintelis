<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/viewHeaderBg"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="#C53030"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle_ripple"
                        android:backgroundTint="#33FFFFFF"
                        android:src="@drawable/ic_chevron_left"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tvPageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Expense Details"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textColor="#CCFFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />
            </LinearLayout>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDetailTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="32dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="16dp"
            android:overScrollMode="never"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDateFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pill_white_outline"
        android:backgroundTint="@android:color/white"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="January 2025"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_anchor="@id/rvDetailTransactions"
        app:layout_anchorGravity="top|center_horizontal"
        android:layout_marginTop="-20dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>