<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="14dp"
    android:background="@drawable/grad_ovo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/imgWalletLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_ovo"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtWalletName"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="OVO"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtWalletNumber"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="081212322837"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtWalletOwner"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Descellia Ng"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtWalletBalance"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Rp 1.280.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
