<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding"
    android:id="@+id/nav_analysis"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul Halaman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budi Santoso Credit Analysis Results"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:textColor="#1E1E1E"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Budi Santoso scores and recommendations"
            android:textSize="14sp"
            android:textColor="#808080"
            android:fontFamily="@font/lato_regular"
            android:layout_marginBottom="16dp" />

        <!-- Skor Kredit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budi Santoso Credit Score"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/lato_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textColor="#2D4EF7"
                android:textSize="36sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latest: Oct 25, 2023"
                android:textColor="#999999"
                android:textSize="13sp"
                android:fontFamily="@font/lato_regular" />
        </LinearLayout>

        <!-- Detail Skor + Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budi Santoso Score Detail"
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here is the distribution of Budi Santoso scores based on the assessment factors:"
                android:textColor="#555555"
                android:textSize="13sp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginBottom="12dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginBottom="8dp" />

            <!-- Legend kecil di bawah chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <!-- Ringkasan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The estimated probability of default is 12%."
                android:textColor="#2D4EF7"
                android:textSize="12sp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potential Losses: Rp18.000.000"
                android:textColor="#2D4EF7"
                android:textSize="12sp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginBottom="12dp" />

            <!-- Tombol Simpan & Cetak -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/fintelis_accent"
                    android:text="Save Result"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnCetak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/fintelis_accent"
                    android:text="Print Report (PDF)"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
