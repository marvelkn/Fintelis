<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FAFB"
    tools:context=".DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸªª Logo Aplikasi -->
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="143dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="App Logo"
            android:src="@drawable/logo_app" />

        <!-- Greeting -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Zel!"
            android:textColor="#1E293B"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamis, 16 Oktober 2025"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginBottom="20dp" />

        <!-- ðŸ”² Grid fitur -->
        <GridLayout
            android:id="@+id/feature_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp">

            <!-- Fitur 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <!-- Kotak ikon -->
                <LinearLayout
                    android:id="@+id/card_new_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_feature"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_analysis"
                        android:contentDescription="New Analysis Icon" />
                </LinearLayout>

                <!-- Nama fitur di luar kotak -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Analysis"
                    android:textColor="#1E293B"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Fitur 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <!-- Kotak ikon -->
                <LinearLayout
                    android:id="@+id/card_import_data"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_feature"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_import"
                        android:contentDescription="Import Data Icon" />
                </LinearLayout>

                <!-- Nama fitur di luar kotak -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import Data"
                    android:textColor="#1E293B"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

        </GridLayout>

        <!-- ðŸ“ˆ Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartApproval"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ“Š Bar Chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartRisk"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

    </LinearLayout>
</ScrollView>
